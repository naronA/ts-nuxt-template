{
  "name": "app",
  "version": "1.0.0",
  "description": "My magnificent Nuxt.js project",
  "author": "tminami",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext .js,.vue,.tx --ignore-path .eslintignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.vue": [
      "eslint --ext .vue --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.ts": [
      "eslint --ext .ts --fix --ignore-path .eslintignore .",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.5.4",
    "@nuxtjs/bulma": "^1.2.4",
    "cross-env": "^5.2.0",
    "lodash": "^4.17.19",
    "nuxt": "2.8.1",
    "nuxt-property-decorator": "^2.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "acorn": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "eslint": "5.x",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "sass-loader": "^7.2.0",
    "ts-loader": "^6.0.4",
    "typescript": "3.5.3",
    "vue": "^2.6.10",
    "vue-eslint-parser": "^6.0.4",
    "vuex": "^3.1.1",
    "vuex-module-decorators": "^0.10.1",
    "webpack": "^4.39.2"
  }
}
