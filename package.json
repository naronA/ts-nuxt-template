{
  "name": "app",
  "version": "1.0.0",
  "description": "My magnificent Nuxt.js project",
  "author": "tminami",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext .js,.vue,.tx --ignore-path .eslintignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.vue": [
      "eslint --ext .vue --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.ts": [
      "eslint --ext .ts --fix --ignore-path .eslintignore .",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/bulma": "^1.2.2",
    "cross-env": "^5.2.0",
    "nuxt": "2.4.2",
    "lodash": "^4.17.11",
    "nuxt-property-decorator": "^1.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "acorn": "^6.0.6",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "prettier": "1.16.3",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.3.3",
    "typescript": "3.2.1",
    "vue": "^2.5.22",
    "vue-eslint-parser": "^5.0.0",
    "vuex": "^3.1.0",
    "vuex-module-decorators": "^0.9.7",
    "webpack": "^4.29.0"
  }
}
