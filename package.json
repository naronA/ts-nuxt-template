{
  "name": "app",
  "version": "1.0.0",
  "description": "My magnificent Nuxt.js project",
  "author": "tminami",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext .js,.vue,.tx --ignore-path .eslintignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.vue": [
      "eslint --ext .vue --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.ts": [
      "eslint --ext .ts --fix --ignore-path .eslintignore .",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/bulma": "^1.2.3",
    "cross-env": "^5.2.0",
    "nuxt": "2.6.3",
    "lodash": "^4.17.11",
    "nuxt-property-decorator": "^2.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "acorn": "^6.1.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "prettier": "1.17.0",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.4.6",
    "typescript": "3.4.5",
    "vue": "^2.6.10",
    "vue-eslint-parser": "^6.0.4",
    "vuex": "^3.1.0",
    "vuex-module-decorators": "^0.9.8",
    "webpack": "^4.30.0"
  }
}
